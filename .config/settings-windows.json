{
	"editor.fontFamily": "JetBrainsMono Nerd Font Mono",
	"editor.fontSize": 14,
	"editor.lineHeight": 1.5,
	"editor.fontWeight": "normal",
	"editor.fontLigatures": true,
	"editor.fontVariations": true,
	"editor.minimap.renderCharacters": false,
	"editor.accessibilitySupport": "off",
	"editor.aiStats.enabled": false,
	"editor.codeLens": true,
	"editor.codeLensFontFamily": "JetBrainsMono Nerd Font Mono",
	"editor.smoothScrolling": true,
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.autoClosingBrackets": "always",
	"editor.autoClosingComments": "always",
	"editor.autoClosingQuotes": "always",
	"editor.autoClosingDelete": "always",
	"editor.autoClosingOvertype": "always",
	"editor.autoIndent": "full",
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.colorDecorators": false,
	"editor.tabSize": 2,
	"editor.tabCompletion": "on",
	"editor.cursorBlinking": "expand",
	//
	"telemetry.telemetryLevel": "off",
	"telemetry.editStats.details.enabled": false,
	"telemetry.editStats.enabled": false,
	"telemetry.editStats.showDecorations": false,
	"telemetry.editStats.showStatusBar": false,
	"telemetry.feedback.enabled": false,
	"editor.experimental.treeSitterTelemetry": false,
	//
	"workbench.colorTheme": "Min Dark",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.layoutControl.enabled": false,
	"workbench.statusBar.visible": false,
	"workbench.startupEditor": "none",
	"workbench.activityBar.location": "top",
	"workbench.activityBar.iconClickBehavior": "focus",
	"workbench.commandPalette.history": 0,
	"workbench.reduceMotion": "on",
	"workbench.tips.enabled": false,
	"workbench.welcomePage.walkthroughs.openOnInstall": false,
	//
	"window.commandCenter": false,
	"window.zoomLevel": -1,
	"window.newWindowProfile": "Default",
	"window.menuBarVisibility": "compact",
	"window.border": "off",
	"window.title": "${appName}",
	"window.restoreWindows": "none",
	"window.customTitleBarVisibility": "never",
	//
	"update.showReleaseNotes": false,
	"update.mode": "manual",
	"update.enableWindowsBackgroundUpdates": true,
	//
	"chat.agent.enabled": false,
	"chat.commandCenter.enabled": false,
	"chat.extensionTools.enabled": false,
	//
	"extensions.allowed": {
		"*": true
	},
	"extensions.autoCheckUpdates": true,
	"extensions.autoUpdate": "onlyEnabledExtensions",
	"extensions.ignoreRecommendations": true,
	"extensions.verifySignature": true,
	//
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.banner": "never",
	"security.workspace.trust.startupPrompt": "never",
	//
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.tabs.enabled": false,
	"terminal.integrated.defaultProfile.linux": "kitty",
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.suggest.enabled": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
	"terminal.integrated.fontSize": 14,
	//
	"errorLens.enabled": true,
	"errorLens.codeLensEnabled": true,
	"errorLens.fontFamily": "JetBrainsMono Nerd Font Mono",
	"errorLens.fontSize": "14",
	"errorLens.fontWeight": "500",
	"errorLens.enableOnDiffView": true,
	"errorLens.onSave": true,
	//
	"[html]": {},
	"html.autoClosingTags": true,
	"html.autoCreateQuotes": true,
	"html.format.enable": true,
	"html.suggest.html5": true,
	"html.completion.attributeDefaultValue": "doublequotes",
	"[css]": {},
	"css.autoValidation": "Always",
	"css.format.enable": true,
	"css.validate": true,
	"[tailwindcss]": {
		"editor.defaultFormatter": "bradlc.vscode-tailwindcss",
		"tailwindCSS.codeLens": true,
		"tailwindCSS.validate": true,
		"tailwindCSS.suggestions": true
	},
	"[javascript]": {},
	"[json]": {},
	"[php]": {
		"editor.defaultFormatter": "vscode.php-language-features"
	},
	"php.suggest.basic": false,
	"php.validate.enable": true,
	"php.validate.run": "onSave",
	"[git-commit]": {},
	"[markdown]": {},
	//
	"prettier.enable": true,
	"prettier.enableDebugLogs": false,
	"prettier.jsxSingleQuote": false,
	"prettier.semi": true,
	"prettier.singleQuote": false,
	"prettier.useTabs": true,
	"prettier.tabWidth": 2,
	"prettier.endOfLine": "lf",
	"prettier.bracketSpacing": true,
	"prettier.bracketSameLine": true,
	"prettier.arrowParens": "always",
	"prettier.withNodeModules": false
}
