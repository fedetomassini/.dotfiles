{
  // Editor
  "editor.cursorBlinking": "expand",
  "editor.fontSize": 15,
  "editor.fontWeight": "normal",
  "editor.fontFamily": "'iMWritingMono Nerd Font'",
  "errorLens.fontFamily": "'iMWritingMono Nerd Font'",
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.formatOnSave": false,
  "editor.quickSuggestions": {
    "strings": "on",
    "comments": "on",
    "other": "on"
  },
  "editor.experimental.treeSitterTelemetry": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "window.menuBarVisibility": "hidden",
  "window.titleBarStyle": "native",
  "window.zoomLevel": -1,
  "window.commandCenter": false,
  "window.newWindowProfile": "Default",
  "window.customTitleBarVisibility": "auto",

  // Workbench
  "workbench.colorCustomizations": {
    "tree.indentGuidesStroke": "#1e1e2e",
    "editorOverviewRuler.background": "#1e1e2e", 
  },
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "workbench.iconTheme": "bearded-icons",

  // Catppuccin Theme 
  "catppuccin.accentColor": "blue",
  "catppuccin.customUIColors": {
    "mocha": {
      "commandCenter.background": "base",
      "commandCenter.border": "base",
      "quickInput.background": "base",
      "quickInputTitle.background": "base",
      "editor.findMatchBackground": "base",
      "notificationToast.border": "base",
      "sideBar.background": "base",
      "activityBar.background": "base",
      "editorGroupHeader.tabsBackground": "base",
    }
  },

  // Explorer
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lock, .gitignore",
    "biome.json": ".eslintrc.*",
    "tailwind.config.ts": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },

  // Terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiBlue",
  "terminal.integrated.env.windows": {},
  "terminal.integrated.shellIntegration.history": 5,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.persistentSessionScrollback": 0,
  "terminal.external.linuxExec": "kitty",
  "terminal.integrated.fontFamily": "'iMWritingMono Nerd Font'",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.env.linux": {},

  // Extensions
  "extensions.ignoreRecommendations": true,
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,

  // Updates
  "update.mode": "manual",

  // Telemetry
  "telemetry.telemetryLevel": "off",

  // Excalidraw
  "excalidraw.theme": "dark",
  "excalidraw.language": "en",

  // ErrorLens
  "errorLens.fontStyleItalic": true,
  "errorLens.fontWeight": "700",
  "errorLens.delay": 3500,
  "errorLens.onSaveTimeout": 3500,

  // NPM
  "npm.packageManager": "bun",

  // ProjectManager
  "projectManager.groupList": true,
  "projectManager.tags": [
    "web",
    "java",
    "work",
    "tests",
  ],
  "projectManager.sortList": "Name",

  // CSS/SCSS
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",

  // APC => Deprecated since 1.93
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 11,
      "y": 10
    },
    "frame": false
  },
  "apc.header": {
    "height": 34,
    "fontSize": 15
  },
  "apc.listRow": {
    "height": 26,
    "fontSize": 15
  },
  "apc.activityBar": {
    "itemSize": 38
  },
  "apc.imports": [
    "/home/fedetomassini/.vscode/main.css"
  ],
  "apc.stylesheet": { 
    ".nosidebar .inline-tabs-placeholder": "width: 75px;",
    ".pane-header": "padding: 0 8px;",
