    ".monaco-list-row": "border-radius: 4px;",
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "display: none;",
    ".breadcrumbs-below-tabs": "display: none;",
    ".decorationsOverviewRuler": "width: 0px !important;",
    ".slider, .scrollbar": "width: 3px !important; border-radius: 99px !important;",
    ".content.auxiliary .inline-tabs-placeholder, .no-custom-title-bar-visibility div.monaco-workbench .has-composite-bar, .no-activity-bar.nosidebar:not(.sidebar-right):not(.fullscreen) .inline-tabs-placeholder, .inline-title-bar.horizontal-activitybar .nosidebar:not(.sidebar-right).noeditorarea.monaco-workbench .part.panel.bottom .composite.title, .inline-title-bar .sidebar-right.noauxiliarybar.noeditorarea.monaco-workbench .part.panel.bottom .composite.title, .inline-title-bar:not(.statusbar-top) .monaco-workbench.mac:not(.fullscreen) .auxiliarybar.left .composite.title, .inline-title-bar.statusbar-editor-top:not(.horizontal-activitybar) .monaco-workbench.mac.no-activity-bar.nosidebar:not(.sidebar-right):not(.fullscreen) .statusbar": "padding-left: 5px !important;",
    ".quick-input-widget": "font-size: 14px !important;"
