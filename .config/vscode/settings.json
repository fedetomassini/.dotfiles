  // CustomCSS and JS Loader
  "vscode_custom_css.imports": [
    "file:///home/fedetomassini/.config/Code/User/custom-vscode.css",
    "file:///home/fedetomassini/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
  ],

  // LiveShare
  "liveshare.accessibility.voiceEnabled": false,

  // MongoDB
  "mdb.connectionSaving.defaultConnectionSavingLocation": "Global",
  "mdb.sendTelemetry": false,
  "mdb.showMongoDBHelpExplorer": false,
  "mdb.showMongoDBPlaygrounds": false,

  // GitLens
  "gitlens.telemetry.enabled": false,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.views.repositories.files.layout": "tree",
  "gitlens.advanced.messages": {
    "suppressCreatePullRequestPrompt": true
  },

  // VSCord
  "vscord.app.name": "Visual Studio Code",
  "vscord.app.id": "782685898163617802",
  "vscord.status.state.text.editing": "Editing {file_name}{file_extension} - {current_line}/{current_column} â˜•",
  "vscord.status.details.text.notInFile": "Idle ðŸ’¤",
  "vscord.status.state.text.idle": "Idle ðŸ’¤",
  "vscord.status.problems.text": "",
  "vscord.status.details.text.editing": "",

  // Language-specific settings
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "database-client.telemetry.usesOnlineServices": false,
  "database-client.autoSync": true,
}