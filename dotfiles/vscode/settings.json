{
	"editor.bracketPairColorization.enabled": false,
	"editor.cursorBlinking": "expand",
	"editor.fontSize": 14, // Default 13
	"editor.tabSize": 2,
	"editor.indentSize": "tabSize",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.linkedEditing": true,
	"editor.minimap.enabled": false,
	"editor.smoothScrolling": true,
	"editor.formatOnSave": true,
	"editor.quickSuggestions": {
		"strings": "on",
		"comments": "on",
		"other": "on"
	},
	"diffEditor.hideUnchangedRegions.enabled": true,
	"scm.experimental.showHistoryGraph": true,
	"extensions.ignoreRecommendations": true,
	"extensions.autoCheckUpdates": true,
	"extensions.autoUpdate": true,
	"explorer.compactFolders": false,
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"tailwind.config.js": "tailwind.config*, postcss.config*",
		".env.local": ".env*",
		".env": ".env*"
	},
	"excalidraw.theme": "dark",
	"excalidraw.language": "en",
	"errorLens.fontStyleItalic": true,
	"errorLens.fontWeight": "700",
	"errorLens.delay": 5000, // Testing
	"errorLens.onSaveTimeout": 5000, // Testing
	"npm.packageManager": "bun",
	"projectManager.groupList": true,
	"projectManager.tags": [
		"Testing",
		"Main",
		"Work",
		"Personal",
		"Archived",
		"Learning"
	],
	"projectManager.sortList": "Name",
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.defaultProfile.linux": "bash",
	"terminal.integrated.tabs.defaultColor": "terminal.ansiRed",
	"terminal.integrated.env.windows": {},
	"terminal.integrated.shellIntegration.history": 5,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "underline",
	"terminal.external.linuxExec": "kitty",
	"terminal.integrated.persistentSessionScrollback": 0,
	"telemetry.telemetryLevel": "off",
	"window.menuBarVisibility": "compact",
	"window.titleBarStyle": "native",
	"window.zoomLevel": -1,
	"window.commandCenter": false,
	"workbench.colorCustomizations": {
		"tree.indentGuidesStroke": "#94A684"
	},
	"workbench.colorTheme": "Bearded Theme Altica",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.startupEditor": "none",
	"workbench.tree.indent": 20,
	"workbench.tree.renderIndentGuides": "always",
	"workbench.statusBar.visible": false,
	"workbench.layoutControl.enabled": false,
	"workbench.iconTheme": "bearded-icons",
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"terminal.integrated.env.linux": {},
	"css.lint.unknownAtRules": "ignore",
	"scss.lint.unknownAtRules": "ignore",
	"apc.electron": {
		"titleBarStyle": "hiddenInset",
		"trafficLightPosition": {
			"x": 11,
			"y": 10
		},
		"frame": false
	},
	"apc.header": {
		"height": 36
	},
	"apc.listRow": {
		"height": 24
	},
	"apc.stylesheet": {
		".nosidebar .inline-tabs-placeholder": "width: 75px",
		".pane-header": "padding: 0 8px",
		".split-view-view:first-child .pane-header": "display: none !important;",
		".monaco-list-row": "border-radius: 4px;",
		".monaco-workbench .monaco-list:not(.element-focused):focus:before": "display: none;",
		".breadcrumbs-below-tabs": "display: none;",
		".decorationsOverviewRuler": "width: 0px !important;",
		".slider, .scrollbar": "width: 5px !important; border-radius: 99px !important;"
	},
	"glassit.alpha": 245,
	"prettier.enable": true,
	"prettier.useTabs": true,
	"prettier.tabWidth": 2,
	"liveshare.accessibility.voiceEnabled": false,
	"mdb.connectionSaving.defaultConnectionSavingLocation": "Global",
	"mdb.sendTelemetry": false,
	"mdb.showMongoDBHelpExplorer": false,
	"mdb.showMongoDBPlaygrounds": false
}
